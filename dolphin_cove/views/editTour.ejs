<div class="addTour">
    <h1>Edit Tour Company</h1>
    <form action="/editTour/update/<%= tour.id%>" method="post">
        <div class="input">  
            <label for="">Company Name</label>
            <input type="text" name="c_name" value="<%= tour.comp_name%>">
        </div>
        <div class="input">  
            <label for="">Email</label>
            <input type="text" name="email" value="<%= tour.email%>">
        </div>
        <div class="input">  
            <label for="">Password</label>
            <input type="text" name="pass" value="<%= tour.password%>">
        </div>
        <input type="hidden" value="<%= tour.id%>">
        <input type="submit" value="submit" class="submit">
    </form>
</div>